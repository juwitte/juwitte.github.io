  var intervalId = null;
  const myTitle = document.getElementById("my_title");
  myTitle.addEventListener("mouseover", () => {
    if (intervalId) return;

    intervalId = setInterval(() => {
      canvas.innerText = frames[index];
      index = (index + 1) % frames.length;
    }, 300);
  });

  myTitle.addEventListener("mouseleave", () => {
    clearInterval(intervalId);
    intervalId = null;
  });
