---
import Box from "./Box.astro";
---

<section
  class="w-full grid grid-cols-1 grid-rows-1 lg:grid-cols-2 gap-4 place-items-center"
  id="hero"
>
  <div class="w-full grid h-screen place-items-center py-10">
    <div id="my_title" class="text-center -mt-34">
      <h1 class="font-bold text-6xl xl:text-7xl">Julius F. Witte</h1>
      <h2 class="text-3xl text-cyan-500">Software & Web Developer</h2>
      <div class="font-mono font-bold text-sm pt-2">
        <pre id="canvas"></pre>
      </div>
    </div>
  </div>

  <div class="grid w-full place-items-center px-10 xl:px-20 gap-8">
    <Box box_id="about_me" box_title="About Me">
      <div class="grid gap-1">
        <div class="grid place-items-left grid-cols-1 md:grid-cols-3">
          <span class="text-cyan-500">Age Level</span>
          <span id="current_age" class="col-span-2">32</span>
        </div>
        <div class="grid place-items-left grid-cols-1 md:grid-cols-3">
          <span class="text-cyan-500">Based In</span>
          <span class="col-span-2">Wolfenb√ºttel, DE</span>
        </div>
        <div class="grid place-items-left grid-cols-1 md:grid-cols-3">
          <span class="text-cyan-500">Education</span>
          <span class="col-span-2">MSc Bioinformatics</span>
        </div>
        <div class="grid place-items-left grid-cols-1 md:grid-cols-3">
          <span class="text-cyan-500">Coding</span>
          <span id="code_time" class="col-span-2">2+ Years</span>
        </div>
        <div class="grid place-items-left grid-cols-1 md:grid-cols-3">
          <span class="text-cyan-500">Professional</span>
          <span id="work_time" class="col-span-2">2+ Years</span>
        </div>
        <div class="grid place-items-left grid-cols-1 md:grid-cols-3">
          <span class="text-cyan-500">Speaks</span>
          <span class="col-span-2">German & English</span>
        </div>
      </div>
    </Box>

    <Box box_id="xp" box_title="XP">
      <div class="grid gap-3">
        <div class="grid place-items-left grid-cols-1 md:grid-cols-3">
          <span class="text-cyan-500">2025 - TODAY</span>
          <div class="col-span-2">
            <span class="">Software Developer</span>
            <br />
              <a class="text-xl hover:text-amber-500 hover:fill-amber-500 fill-white flex gap-1"href="https://osiris-solutions.de/" target="_blank"
                >@ Osiris Solutions GmbH
                <svg
                xmlns="http://www.w3.org/2000/svg"
                width="23"
                height="23"
                viewBox="0 0 256 256"
              >
                <path
                  d="M228,104a12,12,0,0,1-24,0V69l-59.51,59.51a12,12,0,0,1-17-17L187,52H152a12,12,0,0,1,0-24h64a12,12,0,0,1,12,12Zm-44,24a12,12,0,0,0-12,12v64H52V84h64a12,12,0,0,0,0-24H48A20,20,0,0,0,28,80V208a20,20,0,0,0,20,20H176a20,20,0,0,0,20-20V140A12,12,0,0,0,184,128Z"
                >
                </path>
              </svg>
              </a>
              
          </div>
        </div>
        <div class="grid place-items-left grid-cols-1 md:grid-cols-3">
          <span class="text-cyan-500">2023 - 2026</span>
          <div class="col-span-2">
            <span>Research Associate</span>
            <br />
            <span class="text-xl">-  Bioinformatics & Databases - </span>
            <br />
            <div
              class="text-xl hover:text-amber-500 hover:fill-amber-500 fill-white flex gap-1"
            >
              <a href="https://www.dsmz.de/" target="_blank"
                >@ Leibniz Insitut DSMZ
              </a>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="23"
                height="23"
                viewBox="0 0 256 256"
              >
                <path
                  d="M228,104a12,12,0,0,1-24,0V69l-59.51,59.51a12,12,0,0,1-17-17L187,52H152a12,12,0,0,1,0-24h64a12,12,0,0,1,12,12Zm-44,24a12,12,0,0,0-12,12v64H52V84h64a12,12,0,0,0,0-24H48A20,20,0,0,0,28,80V208a20,20,0,0,0,20,20H176a20,20,0,0,0,20-20V140A12,12,0,0,0,184,128Z"
                >
                </path>
              </svg>
            </div>
          </div>
        </div>
        <div class="grid place-items-left grid-cols-1 md:grid-cols-3">
          <span class="text-cyan-500">2023</span>
          <div class="col-span-2">
            <span>Master of Science - Bioinformatics</span>
            <br />
            <div
              class="text-xl hover:text-amber-500 hover:fill-amber-500 fill-white flex gap-1"
            >
              <a href="https://www.inf.uni-hamburg.de/studies/master/bioinf#uhh-tabs-0_tab-1" target="_blank"
                >@ University of Hamburg
              </a>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="23"
                height="23"
                viewBox="0 0 256 256"
              >
                <path
                  d="M228,104a12,12,0,0,1-24,0V69l-59.51,59.51a12,12,0,0,1-17-17L187,52H152a12,12,0,0,1,0-24h64a12,12,0,0,1,12,12Zm-44,24a12,12,0,0,0-12,12v64H52V84h64a12,12,0,0,0,0-24H48A20,20,0,0,0,28,80V208a20,20,0,0,0,20,20H176a20,20,0,0,0,20-20V140A12,12,0,0,0,184,128Z"
                >
                </path>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </Box>
  </div>
</section>

<script is:inline>
  const da = new Date();
  let this_year = da.getFullYear();
  let month = da.getMonth();
  let day = da.getDate();

  const workTime = document.getElementById("work_time");
  workTime.innerText = this_year - 2023 + "+ Years";

  const codeTime = document.getElementById("code_time");
  codeTime.innerText = this_year - 2013 + "+ Years";

  const currentAge = document.getElementById("current_age");
  if ((month == 11 && day >= 23) || month == 12) {
    currentAge.innerText = this_year - 1993;
  } else {
    currentAge.innerText = this_year - 1994;
